{
  "clangd.enabled": true,
  "clangd.arguments": [
    "--background-index",
    "-j=4",
    "--clang-tidy",
    "--all-scopes-completion",
    "--completion-style=bundled",
    "--header-insertion=never",
    "--header-insertion-decorators",
    "--pch-storage=memory",
    "--enable-config",
    "--log=verbose"
  ],

  "coc.source.word.filetypes": ["markdown"],
  "coc.source.tag.filetypes": ["html", "vue", "xml", "markdown"],

  "codeLens.enable": true,
  "codeLens.position": "top",

  "colors.enable": true,

  "diagnostic.errorSign":   "⬤ ",
  "diagnostic.hintSign":    " ",
  "diagnostic.infoSign":    " ",
  "diagnostic.warningSign": " ",

  "explorer.icon.enableNerdfont": true,
  "explorer.width": 35,
  "explorer.icon.collapsed": "",
  "explorer.icon.expanded":  "",
  "explorer.previewAction.onHover": "labeling",
  "explorer.keyMappings.global": {
    "[g": ["wait", "markPrev:git"],
    "]g": ["wait", "markNext:git"],
  },
  
  "inlayHint.enable": false,
  "inlayHint.parameterSeparator": " ",
  "inlayHint.refreshOnInsertMode": true,
  "inlayHint.subSeparator": ", ",
  "inlayHint.typeSeparator": " ",

  "languageserver": {
    "sourcery":{
      "command": "sourcery",
      "args": [
        "lsp"
      ],
      "filetypes": [
        "python"
      ],
      "initializationOptions": {
        "editor_version": "vim",
        "extension_version": "coc.vim"
      },
      "settings": {
        "sourcery": {
          "metricsEnabled": true
        }
      }
    },
    "typst-lsp": {
      "command": "typst-lsp",
      "filetypes": [
        "typst"
      ]
    }
  },

  "list.floatPreview": true,
  "list.insertMappings": {
    "<C-n>": "normal:j",
    "<C-p>": "normal:k"
  },
  "list.indicator": "❯ ",

  "links.highlight": true,
  "links.tooltip": true,

  "Lua.diagnostics.globals": ["vim"],
  "Lua.codeLens.enable": true,
  "Lua.workspace.library": [
    "/usr/share/nvim/runtime/lua",
    "/usr/share/nvim/runtime/lua/vim",
    "/usr/share/nvim/runtime/lua/vim/lsp"
  ],

  "marketplace.npmsio": true,

  "outline.previewBorderRounded": true,

  "pyright.enable": true,

  "rust-analyzer.enable": true,
  "rust-analyzer.inlayHints.maxLength": 25,
  "rust-analyzer.inlayHints.renderColons": false,
  "rust-analyzer.inlayHints.reborrowHints.enable": "mutable",
  "rust-analyzer.inlayHints.closureReturnTypeHints.enable": "with_block",
  "rust-analyzer.inlayHints.lifetimeElisionHints.enable": "skip_trivial",
  "rust-analyzer.lens.debug.enable":                  false,
  "rust-analyzer.lens.references.adt.enable":         true,
  "rust-analyzer.lens.references.trait.enable":       true,
  "rust-analyzer.lens.references.method.enable":      true,
  "rust-analyzer.lens.references.enumVariant.enable": true,

  "suggest.completionItemKindLabels": {
    "class":         "\uf0e8",
    "color":         "\ue22b",
    "constant":      "\uf8fe",
    "constructor":   "\uf0ad",
    "default":       "\uf29c",
    "enumMember":    "\uf02b",
    "enum":          "\uf435",
    "event":         "\ufacd",
    "field":         "\uf9be",
    "file":          "\uf723",
    "folder":        "\uf114",
    "function":      "\u0192",
    "interface":     "\uf417",
    "keyword":       "\uf1de",
    "method":        "\uf09a",
    "module":        "\uf40d",
    "operator":      "\u03a8",
    "property":      "\ue624",
    "reference":     "\ufa46",
    "snippet":       "\ue60b",
    "struct":        "\ufb44",
    "text":          "\ue612",
    "typeParameter": "\uf728",
    "unit":          "\uf475",
    "value":         "\uf89f",
    "variable":      "\ue79b",
  },

  "tree.openedIcon": "",
  "tree.closedIcon": "",
  "tree.key.toggle": "o",
  
  "vetur.experimental.templateInterpolationService": true,

  "suggest.virtualText": false,
}
