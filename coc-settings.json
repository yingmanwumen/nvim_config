{
  "clangd.enabled": true,
  "clangd.arguments": [
    "--background-index",
    "-j=4",
    "--clang-tidy",
    "--all-scopes-completion",
    "--completion-style=bundled",
    "--header-insertion=never",
    "--header-insertion-decorators",
    "--pch-storage=memory",
    "--enable-config",
    "--log=verbose"
  ],

  "coc.source.word.filetypes": ["markdown"],
  "coc.source.tag.filetypes": ["html", "vue", "xml", "markdown"],

  "codeLens.enable": true,
  "codeLens.position": "top",

  "colors.enable": true,

  "diagnostic.errorSign":   " ",
  "diagnostic.hintSign":    " ",
  "diagnostic.infoSign":    " ",
  "diagnostic.warningSign": " ",

  "explorer.icon.enableNerdfont": true,
  "explorer.width": 35,
  "explorer.icon.collapsed": "",
  "explorer.icon.expanded":  "",
  "explorer.git.icon.status.mixed": "*",
  "explorer.git.icon.status.added": "",
  "explorer.git.icon.status.copied": "C",
  "explorer.git.icon.status.deleted": "",
  "explorer.git.icon.status.renamed": "R",
  "explorer.git.icon.status.ignored": "!",
  "explorer.git.icon.status.modified": "",
  "explorer.git.icon.status.unmerged": "U",
  "explorer.git.icon.status.untracked": "?",
  "explorer.git.icon.status.unmodified": " ",
  "explorer.git.icon.rootStatus.ahead": "⇡",
  "explorer.git.icon.rootStatus.added": "",
  "explorer.git.icon.rootStatus.behind": "⇣",
  "explorer.git.icon.rootStatus.stashed": "$",
  "explorer.git.icon.rootStatus.renamed": "→",
  "explorer.git.icon.rootStatus.deleted": "✗",
  "explorer.git.icon.rootStatus.modified": "",
  "explorer.git.icon.rootStatus.untracked": "?",
  "explorer.git.icon.rootStatus.conflicted": "=",
  "explorer.previewAction.onHover": "labeling",
  "explorer.keyMappings.global": {
    "[g": ["wait", "markPrev:git"],
    "]g": ["wait", "markNext:git"],
  },
  
  "inlayHint.enable": false,
  "inlayHint.parameterSeparator": " ",
  "inlayHint.refreshOnInsertMode": true,
  "inlayHint.subSeparator": ", ",
  "inlayHint.typeSeparator": " ",

  "languageserver": {
    "sourcery":{
      "command": "sourcery",
      "args": [
        "lsp"
      ],
      "filetypes": [
        "python"
      ],
      "initializationOptions": {
        "editor_version": "vim",
        "extension_version": "coc.vim"
      },
      "settings": {
        "sourcery": {
          "metricsEnabled": true
        }
      }
    },
    "typst-lsp": {
      "command": "typst-lsp",
      "filetypes": [
        "typst"
      ]
    }
  },

  "list.floatPreview": true,
  "list.insertMappings": {
    "<C-n>": "normal:j",
    "<C-p>": "normal:k"
  },
  "list.indicator": "❯ ",

  "links.highlight": true,
  "links.tooltip": true,

  "Lua.diagnostics.globals": ["vim"],
  "Lua.codeLens.enable": true,
  "Lua.workspace.library": [
    "/usr/share/nvim/runtime/lua",
    "/usr/share/nvim/runtime/lua/vim",
    "/usr/share/nvim/runtime/lua/vim/lsp",
  ],

  "marketplace.npmsio": true,

  "outline.previewBorderRounded": true,

  "pyright.enable": true,

  "rust-analyzer.enable": true,
  "rust-analyzer.inlayHints.maxLength": 25,
  "rust-analyzer.inlayHints.renderColons": false,
  "rust-analyzer.inlayHints.reborrowHints.enable": "mutable",
  "rust-analyzer.inlayHints.closureReturnTypeHints.enable": "with_block",
  "rust-analyzer.inlayHints.lifetimeElisionHints.enable": "skip_trivial",
  "rust-analyzer.lens.debug.enable":                  false,
  "rust-analyzer.lens.references.adt.enable":         true,
  "rust-analyzer.lens.references.trait.enable":       true,
  "rust-analyzer.lens.references.method.enable":      true,
  "rust-analyzer.lens.references.enumVariant.enable": true,

  "suggest.completionItemKindLabels": {
    "class":         " ",
    "color":         " ",
    "constant":      " ",
    "constructor":   " ",
    "default":       " ",
    "enumMember":    " ",
    "enum":          " ",
    "event":         " ",
    "field":         " ",
    "file":          " ",
    "folder":        " ",
    "function":      " ",
    "interface":     " ",
    "keyword":       " ",
    "method":        " ",
    "module":        " ",
    "operator":      " ",
    "property":      " ",
    "reference":     " ",
    "snippet":       " ",
    "struct":        " ",
    "text":          " ",
    "typeParameter": " ",
    "unit":          " ",
    "value":         " ",
    "variable":      " ",
  },
  "suggest.virtualText": false,
  "suggest.selection": "recentlyUsedByPrefix",
  "suggest.formatItems": [
    "abbr",
    "menu",
    "kind",
  ],
  "suggest.removeDuplicateItems": true,
  "suggest.reversePumAboveCursor": true,

  "coc.source.ultisnips.shortcut": "S",

  "tree.openedIcon": "",
  "tree.closedIcon": "",
  "tree.key.toggle": "o",
  
  "vetur.experimental.templateInterpolationService": true
}
